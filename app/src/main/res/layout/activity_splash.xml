<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="leeyip.pandatv.SplashActivity">

    <TextView
        android:id="@+id/tv_to_main"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="www.panda.tv"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        />

    <ImageView
        android:id="@+id/splash_bg"
        android:layout_above="@id/tv_to_main"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/wh120.0dimens120.0dp"
        android:layout_height="@dimen/wh56.0dimens56.0dp"
        android:src="@drawable/ic_home_logo"
        />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sd_splash"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/splash_bg"
        />

</com.zhy.autolayout.AutoRelativeLayout>
